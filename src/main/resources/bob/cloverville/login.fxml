<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom, #9DF081, #7DCF63);" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bob.cloverville.controllers.LoginController">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f3f7f2; -fx-padding: 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 25, 0.3, 0, 5);">

                <!-- TITLE -->
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0f5c03;" text="Cloverville â€“ Login" />

                <Label style="-fx-font-size: 13px; -fx-text-fill: #2f2f2f;" text="Welcome back! Please login to continue." />

                <!-- USERNAME -->
                <TextField fx:id="usernameField" prefHeight="38" prefWidth="280" promptText="Username" style="-fx-background-radius: 10;-fx-border-radius: 10;-fx-background-color: #f6fff3;-fx-border-color: #0f5c03;-fx-font-size: 13px;" />

                <!-- PASSWORD -->
                <PasswordField fx:id="passwordField" prefHeight="38" prefWidth="280" promptText="Password" style="-fx-background-radius: 10;    -fx-border-radius: 10;    -fx-background-color: #f6fff3;    -fx-border-color: #0f5c03;    -fx-font-size: 13px;" />

                <!-- ERROR -->
                <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" visible="false" wrapText="true" />

                <!-- BUTTONS -->
                <HBox alignment="CENTER" spacing="15">
                    <Button onAction="#onLogin" prefHeight="35" prefWidth="120" style="-fx-background-color: #caffc4; -fx-border-color: #0f5c03; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px;" text="Login" />

                    <Button onAction="#onQuit" prefHeight="35" prefWidth="120" style="-fx-background-color: #ffe5e5; -fx-border-color: #7a0000; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-size: 14px;" text="Quit" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
