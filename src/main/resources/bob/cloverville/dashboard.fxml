<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700" prefWidth="1100" style="-fx-background-color: #f8fcf7;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bob.cloverville.controllers.DashboardController">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #a8f59d;              -fx-padding: 15;">
            <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0a4604;" text="Cloverville" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnUser" onAction="#openUserAccount" style="-fx-background-color: #e9fce7;  -fx-background-radius: 8;  -fx-border-radius: 8;  -fx-border-color: #8fc48a;" text="User" />

            <Button fx:id="btnSettings" onAction="#openSettingsWindow" style="-fx-background-color: #e9fce7;  -fx-background-radius: 8;  -fx-border-radius: 8;  -fx-border-color: #8fc48a;" text="Settings" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox prefWidth="180" spacing="10" style="-fx-background-color: #d2e7cf;              -fx-padding: 20;">

            <Button fx:id="btnMembers" prefWidth="150"  text="Members" />

            <Button fx:id="btnTasks" prefWidth="150" text="Activities" />

        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- search row -->
            <HBox spacing="10">

                <TextField fx:id="searchField" prefWidth="300" promptText="Search..." style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-background-color: #ffffff; -fx-border-color: #8fc48a;" />

                <ComboBox fx:id="filterComboBox" prefWidth="180" style="-fx-background-radius: 8;-fx-border-radius: 8;-fx-background-color: #ffffff;-fx-border-color: #8fc48a;">
                    <items>
                        <FXCollections fx:factory="observableArrayList" />
                    </items>
                </ComboBox>

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="btnAdd" style="-fx-font-size: 18; -fx-padding: 6 16; -fx-background-color: #e9ffe7; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #0f5c03;" text="+">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font></Button>
            </HBox>

            <!-- Table container (card) -->
            <VBox style="-fx-background-color: #ffffff;-fx-background-radius: 12;-fx-border-radius: 12;-fx-border-color: #8fc48a;-fx-padding: 5;">
                <TableView fx:id="tableView"  prefHeight="580" style="-fx-background-color: transparent;" tableMenuButtonVisible="true" />
            </VBox>

        </VBox>
    </center>

</BorderPane>
