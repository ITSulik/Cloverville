<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="bob.cloverville.controllers.DashboardController"
            prefWidth="1100" prefHeight="700">

    <!-- HEADER -->
    <top>
        <HBox spacing="20" style="-fx-background-color: #f0f0f0; -fx-padding: 15;">
            <Label text="Cloverville" style="-fx-font-size: 24; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS" />
            <Button text="User" />
            <Button text="Settings" />
        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="10" prefWidth="180"
              style="-fx-background-color: #e6e6e6; -fx-padding: 20;">
            <Button fx:id="btnMembers" text="Members" prefWidth="150" />
            <Button fx:id="btnTasks" text="Tasks" prefWidth="150" />
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- search row -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Search..." prefWidth="300" />
                <Button fx:id="filterButton" text="Filter" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="btnAdd" text="+" style="-fx-font-size: 18; -fx-padding: 5 15;" />
            </HBox>

            <TableView fx:id="tableView" prefHeight="600" />
        </VBox>
    </center>

</BorderPane>
